<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="ProductsPack.changePackStatus" path="/admin/module/ProductsPack/changePackStatus">
        <default key="_controller">ProductsPack\Controller\ProductsPackController::changePackStatusAction</default>
    </route>
    
    <route id="ProductsPack.addToPack" path="/admin/module/ProductsPack/addToPack">
        <default key="_controller">ProductsPack\Controller\ProductsPackController::addToPackAction</default>
    </route>
    
    <route id="ProductsPack.removeProductFromPack" path="/admin/module/ProductsPack/removeProductFromPack">
        <default key="_controller">ProductsPack\Controller\ProductsPackController::removeProductFromPackAction</default>
    </route>
    
</routes>
